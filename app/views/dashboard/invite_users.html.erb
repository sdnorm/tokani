<main class="md:pl-64">
  <div class="py-6 max-w-7xl px-4 sm:px-6 md:px-8 mx-auto">
    <h1 class="text-xl font-semibold text-gray-900">
      Invite Users
    </h1>
    <p class="mt-2 text-sm text-gray-700">Add details to invite users on Tokani Platform</p>
    <div class="p-8 bg-white rounded shadow mt-4">
      <%= form_with(model: @user, url: create_invitation_path, method: :post, local: true) do |form| %>
        <div class="w-full xl:w-1/3 lg:w-2/3 mb-3">
          <%= form.label("Email", class: "block text-sm font-medium text-gray-700") %>
          <%= form.text_field(:email, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-tokanisecondary-500 focus:outline-none focus:ring-tokanisecondary-500 sm:text-sm", placeholder: "Enter Email", required: true) %>
        </div>
        <div class="w-full xl:w-1/3 lg:w-2/3 mb-3">
          <%= form.label("First Name", class: "block text-sm font-medium text-gray-700") %>
          <%= form.text_field(:first_name, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-tokanisecondary-500 focus:outline-none focus:ring-tokanisecondary-500 sm:text-sm", placeholder: "Enter First Name", required: true) %>
        </div>
        <div class="w-full xl:w-1/3 lg:w-2/3 mb-3">
          <%= form.label("Last Name", class: "block text-sm font-medium text-gray-700") %>
          <%= form.text_field(:last_name, class: "mt-1 block w-full rounded-md border border-gray-300 py-2 px-3 shadow-sm focus:border-tokanisecondary-500 focus:outline-none focus:ring-tokanisecondary-500 sm:text-sm", placeholder: "Enter Last Name", required: true) %>
        </div>

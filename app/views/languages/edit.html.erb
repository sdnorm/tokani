<%= content_for :title, t("shared.scaffold.edit.title", model: "Language") %>
<%= content_for :title, "Language ##{@language.id}" %>
<%= turbo_stream_from @language %>
<%= render partial: "shared/sidenav" %>
<div class="flex flex-1 flex-col md:pl-64">
  <main class="flex-1">
    <div class="py-6">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
          <div class="px-4 sm:px-6 lg:px-8">
            <div class="sm:flex sm:items-center pb-6">
                <div class="sm:flex-auto"> 
                  <h1 class="text-xl font-semibold text-gray-900">
                    <%= link_to "Languages", languages_path, class: "text-tokanisecondary-500" %>
                      <span class="text-gray-400 font-light mx-2">\</span>
                      <%= @language.name %>
                  </h1>
                </div>
                  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
                    <%# button_to t("delete"), @language, method: :delete, class: "btn btn-white", form: { data: { turbo_confirm: t("are_you_sure") } } %>
                  </div>
                </div>
                <div class="p-8 bg-white rounded shadow">
                  <%= render "form", language: @language %>
                 
                </div>
            </div>
          </div>
        </div>
  </main>
</div>

<%= content_for :title, "Customers ##{@customer.id}" %>
<%= turbo_stream_from @customer %>

<div class="flex flex-1 flex-col md:pl-64">
  <main class="flex-1">
    <div class="py-6">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-6">
          <div class="px-4 sm:px-6 lg:px-8">
            <div class="sm:flex sm:items-center pb-6">
                <div class="sm:flex-auto"> 
                  <h1 class="text-xl font-semibold text-gray-900">
                    <%= link_to "Customers", customers_path, class: "text-tokanisecondary-500" %>
                      <span class="text-gray-400 font-light mx-2">\</span>
                      <%= @customer.name %>
                  </h1>
                </div>
                  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
                    <%= link_to t("edit"), edit_customer_path(@customer), class: "btn btn-tokani_purple" %>
                  </div>
                </div>
          

                <div class="p-8 bg-white rounded shadow">
                  <%= render partial: 'customer', locals: { customer: @customer } %>
                </div>
            </div>
          </div>
        </div>
  </main>
</div>

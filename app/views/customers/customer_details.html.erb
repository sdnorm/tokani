<%= render partial: "shared/sidenav" %>
<div class="flex flex-1 flex-col md:pl-64">
  <main class="flex-1">
    <div class="py-6">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
          <div class="px-4 sm:px-6 lg:px-8">
            <div class="sm:flex sm:items-center pb-6">
                <div class="sm:flex-auto"> 
                  <h1 class="text-xl text-tokanisecondary-500">
                  Customer Details                   
                  </h1>
                </div>
                  <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
                    <%= link_to t("edit"), customers_customer_details_edit_path, class: "btn btn-tokani_purple" %>
                  </div>
                </div>
                <div class="p-8 bg-white rounded shadow">
									<div class="overflow-hidden bg-white shadow sm:rounded-lg">
										<div class="px-4 py-5 sm:px-6">
											<h3 class="text-lg font-medium leading-6 text-gray-900">Customer Name</h3>
										</div>
										<div class="border-t border-gray-200 px-4 py-5 sm:p-0">
											<dl class="sm:divide-y sm:divide-gray-200">
												<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
													<dt class="text-sm font-medium text-tokanisecondary-600">Contact Name</dt>
													<dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"> Contact Name</dd>
												</div>
												<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
													<dt class="text-sm font-medium text-tokanisecondary-600">Email address</dt>
													<dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">contact@customer.com </dd>
												</div>
												<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
													<dt class="text-sm font-medium text-tokanisecondary-600">Phone</dt>
													<dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">222-222-2222</dd>
												</div>
												<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
													<dt class="text-sm font-medium text-tokanisecondary-600">Fax</dt>
													<dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">000-000-0000</dd>
												</div>
												<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
													<dt class="text-sm font-medium text-tokanisecondary-600">Notes</dt>
													<dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">Notes</dd>
												</div>
												<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
													<dt class="text-sm font-medium text-tokanisecondary-600">In-Person Appointments?</dt>
													<dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">YES</dd>
												</div>
												<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
													<dt class="text-sm font-medium text-tokanisecondary-600">Video Appointments?</dt>
													<dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">YES</dd>
												</div>
												<div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5 sm:px-6">
													<dt class="text-sm font-medium text-tokanisecondary-600">Phone Appointments?</dt>
													<dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0">NO</dd>
												</div>
											</dl>
										</div>
									</div>
                </div>
            </div>
          </div>
        </div>
  </main>
</div>

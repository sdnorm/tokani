<%= content_for :title, "Agencies" %>
<%= turbo_stream_from :agencies %>
<div class="flex flex-1 flex-col md:pl-64">
	<main class="flex-1">
	  <div class="py-6">
		  <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-6">
		    <div class="px-4 sm:px-6 lg:px-6">
			    <div class="sm:flex sm:items-center pb-6">
				    <div class="sm:flex-auto"> 
				      <h1 class="text-xl font-semibold text-gray-900">
                <span class="text-tokanisecondary-500">
                  <%= current_user.full_name %>
                </span>
					      <span class="text-tokaniprimary-600 font-light mx-2">/ Dashboard</span>    
				      </h1>
				    </div>      
			    </div>
		    
		      <div class="px-4 sm:px-6 lg:px-8 container">
            <div class="sm:flex sm:items-center">
              <div class="sm:flex-auto">
                <h1 class="text-xl font-semibold text-gray-900">Agencies</h1>
              </div>
              <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
                <%= link_to t("shared.scaffold.new.title", model: "Agency"), new_agency_path, class: "btn bg-tokaniprimary-500 text-white hover:text-white hover:bg-tokaniprimary-400" %>
              </div>

            </div>
               
            <div class="-mx-4 mt-8 overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:-mx-6 md:mx-0 md:rounded-lg">
              <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6"><%= sortable @sites, :name, "Name" %></th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900"><%= sortable @sites, :primary_contact_email, "Primary Contact" %></th>
                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                      <span class="sr-only">View</span>
                    </th>
                    <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
                      <span class="sr-only">Edit</span>
                    </th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                  <%= render partial: "agencies/agency_list", collection: @agencies, as: :agency, cached: true %>
                  <div class="hidden only:flex flex-col items-center justify-between lg:flex-row">
                    <%= image_tag "empty.svg", class: "mb-4 lg:w-1/2" %>
                    <div class="flex-1 text-center">
                      <p class="mb-4 h3">Create your first Agency</p>
                      <%= link_to t("shared.scaffold.new.title", model: "Agency"), new_agency_path, class: "btn btn-primary" %>

                    </div>
                  </div>
                </tbody>
              </table>
            </div>      
            <% if @pagy.pages > 1 %>
              <div class="my-6 text-center">
                <%== pagy_nav(@pagy) %>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
   
  </main>
</div>

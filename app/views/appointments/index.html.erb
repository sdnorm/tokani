                      <div class="ml-5 w-0 flex-1">
                        <dl>
                          <dt class="truncate text-sm font-medium text-gray-500">Appointments Completed</dt>
                          <dd>
                            <div class="text-lg font-medium text-gray-900"><%= @finished_appts_count %></div>
                          </dd>
                        </dl>
                      </div>
                    </div>
                  </div>
                  <div class="bg-gray-50 px-5 py-3">
                    <div class="text-sm">
                      <a href="<%= appointments_path(status: 'finished') %>" class="font-medium text-cyan-700 hover:text-cyan-900 p-2">View all</a>

<%= form_with(model: appointment) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="form-group">
    <%= form.label :customer_id, "Agency Customer*" %>
    <%= form.select :customer_id, options_from_collection_for_select(@customers, :id, :name, @customer_id), {prompt: "Please select A Customer"}, {class: 'form-select' }  %>
  </div>

  <div class="form-group">
    <%= form.label :ref_number %>
    <%= form.text_field :ref_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_time %>
    <%= form.datetime_field :start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :finish_time %>
    <%= form.datetime_field :finish_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :duration %>
    <%= form.number_field :duration, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :modality %>
    <%= form.number_field :modality, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :sub_type %>
    <%= form.number_field :sub_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :gender_req %>
    <%= form.number_field :gender_req, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :admin_notes %>
    <%= form.text_area :admin_notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :notes %>
    <%= form.text_area :notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :details %>
    <%= form.text_area :details, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :status %>
    <%= form.check_box :status, class: "form-checkbox" %>
  </div>

  <div class="form-group">
    <%= form.label :interpreter_type %>
    <%= form.number_field :interpreter_type, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :billing_notes %>
    <%= form.text_area :billing_notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :canceled_by %>
    <%= form.number_field :canceled_by, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :cancel_reason_code %>
    <%= form.number_field :cancel_reason_code, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :lock_version %>
    <%= form.number_field :lock_version, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :time_zone %>
    <%= form.text_field :time_zone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :confirmation_date %>
    <%= form.datetime_field :confirmation_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :confirmation_phone %>
    <%= form.text_field :confirmation_phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :confirmation_notes %>
    <%= form.text_area :confirmation_notes, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :home_health_appointment %>
    <%= form.check_box :home_health_appointment, class: "form-checkbox" %>
  </div>

  <div>
    <%= form.button button_text(form.send(:submit_default_value)), class: "btn btn-primary" %>

    <% if form.object.new_record? %>
      <%= link_to t("cancel"), appointments_path, class: "btn btn-white" %>
    <% else %>
      <%= link_to t("cancel"), appointment_path(@appointment), class: "btn btn-white" %>
    <% end %>
  </div>
<% end %>

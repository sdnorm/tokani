<%= content_for :title, "Requestor Details ##{@requestor_detail.id}" %>
<%= turbo_stream_from @requestor_detail %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Requestor Details", requestor_details_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Requestor Detail #<%= @requestor_detail.id %>
    </h1>
    <%= link_to t("edit"), edit_requestor_detail_path(@requestor_detail), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @requestor_detail %>
  </div>
</div>

            </svg>
            Appointments
          <% end %>
          <div data-controller='toggle'>
            <a href="#" data-action='click->toggle#toggle touch->toggle#toggle' class="<%= accounts_mgmt_highlight? %> group flex items-center px-2 py-2 text-sm font-medium rounded-md">

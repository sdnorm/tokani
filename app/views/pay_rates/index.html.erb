<%= content_for :title, "Pay Rates" %>
<%= turbo_stream_from :pay_rates %>
<div>
  <div class="flex flex-1 flex-col md:pl-64">
    <main class="flex-1">
      <div class="py-6">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
          <div class="px-4 sm:px-6 lg:px-8">
            <div class="sm:flex sm:items-center">
              <div class="sm:flex-auto">
                <h1 class="text-xl font-semibold text-gray-900">Pay Rates</h1>
                <p class="mt-2 text-sm text-gray-700">A list of all the pay rates in your account.</p>
              </div>
              <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
                <%= link_to t("shared.scaffold.new.title", model: "Pay Rate"), new_pay_rate_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-tokanisecondary-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-tokanisecondary-700 focus:outline-none focus:ring-2 focus:ring-tokanisecondary-500 focus:ring-offset-2 sm:w-auto" %>
              </div>
            </div>

  <div class="-mx-4 mt-8 overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:-mx-6 md:mx-0 md:rounded-lg">
    <table class="min-w-full divide-y divide-gray-300">
      <thead class="bg-gray-50">
        <tr>
          <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm uppercase font-semibold text-gray-900 sm:pl-6"><%= sortable @pay_rates, :name, "Name" %></th>
          <th scope="col" class="hidden px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900 lg:table-cell">Hourly Rate</th>
          <th scope="col" class="hidden px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900 lg:table-cell">Min Time Billed</th>
          <th scope="col" class="hidden px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900 lg:table-cell">Modalities</th>
          <th scope="col" class="hidden px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900 lg:table-cell">Languages</th>
          <th scope="col" class="hidden px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900 lg:table-cell">Default Rate?</th>
          <th scope="col" class="px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900">Active</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 bg-white">
      <% @pay_rates.each do |pay_rate| %>
        <tr>
          <td class="w-full max-w-0 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:w-auto sm:max-w-none sm:pl-6">
              <%= link_to(pay_rate.name, pay_rate_path(pay_rate)) %>
              <dl class="font-normal lg:hidden">
                <dt class="sr-only">Hourly Rate</dt>
                <dd class="mt-1 truncate text-gray-700"><%= number_to_currency(pay_rate.hourly_pay_rate) %></dd>
                <dt class="sr-only">Min Time Charged</dt><%= pay_rate.minimum_time_charged %></dd>
                <dt class="sr-only">Modalities</dt>
                <dd class="mt-1 truncate text-gray-500"><%= pay_rate.modality_list.titleize %></dd>
                <dt class="sr-only">Languages</dt>
                <dd class="mt-1 truncate text-gray-500"><%= pay_rate.language_list.titleize %></dd>
                <dt class="sr-only">Default Rate?</dt>
                <dd class="mt-1 truncate text-gray-500"><%= yes_no(pay_rate.default_rate) %></dd>
              </dl>
          </td>
          <td class="hidden px-3 py-4 text-sm text-gray-500 lg:table-cell"><%= number_to_currency(pay_rate.hourly_pay_rate) %></td>
          <td class="hidden px-3 py-4 text-sm text-gray-500 lg:table-cell"><%= pay_rate.minimum_time_charged %></td>
          <td class="hidden px-3 py-4 text-sm text-gray-500 lg:table-cell"><%= pay_rate.modality_list.titleize %></td>
          <td class="hidden px-3 py-4 text-sm text-gray-500 lg:table-cell"><%= pay_rate.language_list.titleize %></td>
          <td class="hidden px-3 py-4 text-sm text-gray-500 lg:table-cell"><%= yes_no(pay_rate.default_rate) %></td>
          <td class="hidden px-3 py-4 text-sm text-gray-500 sm:table-cell"><%= yes_no(pay_rate.is_active) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
</div>
</main>
</div>

  <% if @pagy.pages > 1 %>
    <div class="my-6 text-center">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>

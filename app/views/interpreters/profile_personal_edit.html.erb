<div class="container m-10">
	<div class="mt-4 mb-8">
		<%= link_to "< Back", interpreters_profile_path, class: "text-blue-600 underline" %>
	</div>
	<form class="space-y-8 divide-y divide-gray-200">
		<div class="space-y-8 divide-y divide-gray-200">
			<div>
				<div>
					<h3 class="text-lg font-medium leading-6 text-gray-900">Update Profile</h3>
				</div>

				<div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
					
					<div class="sm:col-span-6">
						<label for="photo" class="block text-sm font-medium text-gray-700">Photo</label>
						<div class="mt-1 flex items-center">
							<span class="h-12 w-12 overflow-hidden rounded-full bg-gray-100">
								<svg class="h-full w-full text-gray-300" fill="currentColor" viewBox="0 0 24 24">
									<path d="M24 20.993V24H0v-2.996A14.977 14.977 0 0112.004 15c4.904 0 9.26 2.354 11.996 5.993zM16.002 8.999a4 4 0 11-8 0 4 4 0 018 0z" />
								</svg>
							</span>
							<button type="button" class="ml-5 rounded-md border border-gray-300 bg-white py-2 px-3 text-sm font-medium leading-4 text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Change</button>
						</div>
					</div>

					<div class="sm:col-span-6">
						<label for="cover-photo" class="block text-sm font-medium text-gray-700">Update Photo</label>
						<div class="mt-1 flex justify-center rounded-md border-2 border-dashed border-gray-300 px-6 pt-5 pb-6 w-1/2">
							<div class="space-y-1 text-center">
								<svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
									<path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
								</svg>
								<div class="flex text-sm text-gray-600">
									<label for="file-upload" class="relative cursor-pointer rounded-md bg-white font-medium text-indigo-600 focus-within:outline-none focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 hover:text-indigo-500">
										<span>Upload a file</span>
										<input id="file-upload" name="file-upload" type="file" class="sr-only">
									</label>
									<p class="pl-1">or drag and drop</p>
								</div>
								<p class="text-xs text-gray-500">PNG, JPG, GIF up to 10MB</p>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="pt-8">
				<div>
					<h3 class="text-lg font-medium leading-6 text-gray-900">Personal Information</h3>
				</div>
				<div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
					<div class="sm:col-span-3">
						<label for="first-name" class="block text-sm font-medium text-gray-700">First name</label>
						<div class="mt-1">
							<input type="text" name="first-name" id="first-name" autocomplete="given-name" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
						</div>
					</div>

					<div class="sm:col-span-3">
						<label for="last-name" class="block text-sm font-medium text-gray-700">Last name</label>
						<div class="mt-1">
							<input type="text" name="last-name" id="last-name" autocomplete="family-name" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
						</div>
					</div>

					<div class="sm:col-span-4">
						<label for="username" class="block text-sm font-medium text-gray-700">User Name</label>
						<div class="mt-1">
							<input id="username" name="username" type="text" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
						</div>
					</div>

					<div class="sm:col-span-3">
						<label for="gender" class="block text-sm font-medium text-gray-700">Gender</label>
						<div class="mt-1">
							<select id="gender" name="gender" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
								<option>Female</option>
								<option>Male</option>
							</select>
						</div>
					</div>

					<div class="sm:col-span-6">
						<label for="home-address" class="block text-sm font-medium text-gray-700">Home Address</label>
						<div class="mt-1">
							<input type="text" name="home-address" id="home-address" autocomplete="home-address" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
						</div>
					</div>

					<div class="sm:col-span-2">
						<label for="home-city" class="block text-sm font-medium text-gray-700">Home City</label>
						<div class="mt-1">
							<input type="text" name="home-city" id="home-city" autocomplete="home-city" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
						</div>
					</div>

					<div class="sm:col-span-2">
						<label for="home-region" class="block text-sm font-medium text-gray-700">Home State / Province</label>
						<div class="mt-1">
							<input type="text" name="home-region" id="home-region" autocomplete="home-region" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
						</div>
					</div>

					<div class="sm:col-span-2">
						<label for="home-postal-code" class="block text-sm font-medium text-gray-700">Home ZIP / Postal code</label>
						<div class="mt-1">
							<input type="text" name="home-postal-code" id="home-postal-code" autocomplete="home-postal-code" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
						</div>
					</div>
					<div class="sm:col-span-6">
						<label for="mail-address" class="block text-sm font-medium text-gray-700">Mailing Address</label>
						<div class="mt-1">
							<input type="text" name="mail-address" id="mail-address" autocomplete="mail-address" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
						</div>
					</div>

					<div class="sm:col-span-2">
						<label for="mail-city" class="block text-sm font-medium text-gray-700">Mailing City</label>
						<div class="mt-1">
							<input type="text" name="mail-city" id="mail-city" autocomplete="mail-city" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
						</div>
					</div>

					<div class="sm:col-span-2">
						<label for="mail-region" class="block text-sm font-medium text-gray-700">Mailing State / Province</label>
						<div class="mt-1">
							<input type="text" name="mail-region" id="mail-region" autocomplete="mail-region" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
						</div>
					</div>

					<div class="sm:col-span-2">
						<label for="mail-postal-code" class="block text-sm font-medium text-gray-700">Mailing ZIP / Postal code</label>
						<div class="mt-1">
							<input type="text" name="mail-postal-code" id="mail-postal-code" autocomplete="mail-postal-code" class="block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
						</div>
					</div>
				</div>
			
		<div class="pt-5">
			<div class="flex justify-end">
				<button type="button" class="rounded-md border border-gray-300 bg-white py-2 px-4 text-sm font-medium text-gray-700 shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Cancel</button>
				<button type="submit" class="ml-3 inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Save</button>
			</div>
		</div>
	</form>
</div>
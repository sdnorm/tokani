<div class="row mt-4 mb-0 justify-content-center">
  <div class="col-md-10 mx-3 mb-0 input-group input-group-static" >
    <%= label_tag :departments, "Departments", class: 'text-blueCoral' %>
  </div>
</div>

<div class="row mt-0 mb-3 justify-content-center">
  <div class="col-md-10 mx-3 mb-3 input-group input-group-static" >
    <% if @departments&.any? %>
      <%= select_tag 'report[department_ids]', options_from_collection_for_select(@departments, 'id', 'name'), class: 'form-select' %>
    <% else %>
      <p>Selected site does not have any associated departments.</p>
    <% end %>
  </div>
</div>

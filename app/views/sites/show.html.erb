<%= content_for :title, "Sites ##{@site.id}" %>
<%= turbo_stream_from @site %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Sites", sites_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      <%= @site.name %>
    </h1>
    <%= link_to t("edit"), edit_site_path(@site), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @site %>
  </div>
</div>

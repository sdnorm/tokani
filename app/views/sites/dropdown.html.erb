<label>Sites</label>

<div class="row mt-0 mb-3 justify-content-center">
  <div class="col-md-10 mx-3 mb-3 input-group input-group-static" >
    <% if @sites&.any? %>
      <%= select_tag 'pay_bill_rate[site_ids]', options_from_collection_for_select(@sites, 'id', 'name', selected: @selected_site_ids), multiple: true, size: 3, data: {action: 'change->pay-bill-rate-customer#siteSelected'}, class: 'form-select', style: 'clear: both;' %>
    <% else %>
      <p>This customer does not have any sites.</p>
    <% end %>
  </div>
</div>

<%= content_for :title, t("shared.scaffold.edit.title", model: "Checklist Item") %>
<%= render partial: "shared/sidenav" %>

<% if current_user.is_interpreter? %>
  <div class="flex flex-wrap my-4 lg:px-4">
    <div class="lg:w-1/4 w-full p-4">
      <%= render partial: "shared/account_navbar" %>
    </div>
<% else %>
  <div class="flex flex-1 flex-col md:pl-64">
<% end %>

  <main class="flex-1">
    <div class="py-6">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-8">
        <div class="px-4 sm:px-6 lg:px-8">
          <div class="sm:flex sm:items-center pb-6">
            <div class="sm:flex-auto">
              <h1 class="text-xl font-semibold text-gray-900">
                <%= link_to "Interpreter Checklist Items", interpreter_items_checklist_item_path(@interpreter), class: "text-tokanisecondary-500" %>
                  <span class="text-gray-400 font-light mx-2">\ Edit Checklist Item</span>
              </h1>
            </div>
          </div>
          <div class="p-8 bg-white rounded shadow">
            <%= render partial: "form", locals: { checklist_item: @checklist_item } %>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>


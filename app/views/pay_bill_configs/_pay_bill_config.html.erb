<div class="bg-white py-5 sm:py-5 lg:py-5">
  <div class="mx-auto max-w-xl px-6 lg:max-w-7xl lg:px-8">
    <div class="mx-auto mb-4 max-w-3xl text-center">
      <h3 class="text-3xl font-bold tracking-tight text-gray-700 sm:text-3xl"><%= pay_bill_config.name %></h3>
      <p class="mx-auto mb-4 max-w-xl text-sm leading-8 text-gray-500">Active:  <%= yes_no(pay_bill_config.is_active) %></p>
    </div>
   </br>
    <dl class="grid grid-cols-1 gap-16 lg:grid lg:grid-cols-3">
      <div>
        <dt>
         <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-tokanisecondary-500 text-white">
          <!-- <i class=" fas fa-regular fa-hourglass-half text-secondary"></i> -->
            <svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
            </svg>
            
          </div>
          <p class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900">Minimum Minutes</p>
        </dt>
      
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Minimum Minutes Billed:  <%= pay_bill_config.minimum_minutes_billed %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Minimum Minutes Paid: <%= pay_bill_config.minimum_minutes_paid %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Minimum Minutes Billed Cancel Level 1: <%= pay_bill_config.minimum_minutes_billed_cancelled_level_1 %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Minimum Minutes Paid Cancel Level 1: <%= pay_bill_config.minimum_minutes_paid_cancelled_level_1 %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Minimum Minutes Billed Cancel Level 2: <%= pay_bill_config.minimum_minutes_billed_cancelled_level_2 %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Minimum Minutes Paid Cancel Level 2: <%= pay_bill_config.minimum_minutes_paid_cancelled_level_2 %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Minimum Minutes Default to Appt. Duration: <%= yes_no(pay_bill_config.is_minutes_billed_appointment_duration) %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Minimum Minutes Cancelled Default to Appt. Duration: <%= yes_no(pay_bill_config.is_minutes_billed_cancelled_appointment_duration)%>
        </dd>
      </div>

      <div>
        <dt>
          <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-tokanisecondary-500 text-white">
            
            <svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v17.25m0 0c-1.472 0-2.882.265-4.185.75M12 20.25c1.472 0 2.882.265 4.185.75M18.75 4.97A48.416 48.416 0 0012 4.5c-2.291 0-4.545.16-6.75.47m13.5 0c1.01.143 2.01.317 3 .52m-3-.52l2.62 10.726c.122.499-.106 1.028-.589 1.202a5.988 5.988 0 01-2.031.352 5.988 5.988 0 01-2.031-.352c-.483-.174-.711-.703-.59-1.202L18.75 4.971zm-16.5.52c.99-.203 1.99-.377 3-.52m0 0l2.62 10.726c.122.499-.106 1.028-.589 1.202a5.989 5.989 0 01-2.031.352 5.989 5.989 0 01-2.031-.352c-.483-.174-.711-.703-.59-1.202L5.25 4.971z" />
            </svg>
          </div>
          <p class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900">Triggers</p>             
        </dt>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Billing Increment: <%= pay_bill_config.billing_increment %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Trigger for Billing Increment: <%= pay_bill_config.trigger_for_billing_increment %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Trigger for Rush Rate: <%= pay_bill_config.trigger_for_rush_rate %>
        </dd>      
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Trigger for Discount Rate: <%= pay_bill_config.trigger_for_discount_rate %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Trigger for Cancel Level 1: <%= pay_bill_config.trigger_for_cancel_level1 %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Trigger for Cancel Level 2: <%= pay_bill_config.trigger_for_cancel_level2 %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Trigger for Travel Time: <%= pay_bill_config.trigger_for_travel_time %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Trigger for Mileage: <%= pay_bill_config.trigger_for_mileage %>
        </dd>
      </div>

      <div>
        <dt>
          <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-tokanisecondary-500 text-white">
            
            <svg class="h-8 w-8" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
            </svg>
          </div>
          <p class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900">Travel & Mileage</p>
        </dt>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Maximum Mileage: <%= pay_bill_config.maximum_mileage %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Maximum Travel Time:  <%= pay_bill_config.maximum_travel_time %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Fixed Rountrip Mileage: <%= pay_bill_config.fixed_roundtrip_mileage %>
        </dd>
      </br>
      <hr>
      </br>
        <dt>
          <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-tokanisecondary-500 text-white">
            <i class="fa-regular fa-xl fa-clock"></i>
          </div>
          <p class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900">After Hours & Weekend</p>
        </dt>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          After Hours (M-F) Times: 
          </br>
          <%= start_config(pay_bill_config, "afterhours_availability_start_seconds1") %> to <%= end_config(pay_bill_config, "afterhours_availability_end_seconds1" ) %>
          </br>
          <%= start_config(pay_bill_config, "afterhours_availability_start_seconds2") %> to <%= end_config(pay_bill_config, "afterhours_availability_end_seconds2" ) %>
        </dd>
        <dd class="mt-2 text-sm leading-7 text-gray-600">
          Weekend (Sat-Sun) Times:   
          </br>
          <%= start_config(pay_bill_config, "weekend_availability_start_seconds1") %> to <%= end_config(pay_bill_config, "weekend_availability_end_seconds1" ) %>
          </br>
          <%= start_config(pay_bill_config, "weekend_availability_start_seconds2") %> to <%= end_config(pay_bill_config, "weekend_availability_end_seconds2" ) %>
        </dd>
      </div>
    </dl>

<%= form_with model: @pay_bill_config, data: {turbo: false}, class: 'form' do |form| %>
    <div class="border-t border-tokaniaccent-300 mt-4 px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-2 gap-x-4 gap-y-8 mb-3">
      <div class="sm:col-span-1">
        <dt class="text-md font-semibold text-gray-900">Agency Customers</dt>
        <dd class="mt-3 text-sm text-gray-900">
          <% @pay_bill_config.customers.each do |cust| %>
          <div class="relative flex items-start mt-1">
            <div class="flex h-5 items-center">
              <%= check_box_tag 'pay_bill_config[customer_ids][]', cust.id, true, class:"h-4 w-4 rounded border-gray-300 text-tokanisecondary-600 focus:ring-tokanisecondary-500" %>
            </div>
            <div class="ml-3 text-sm">
              <%= cust.name %>
              <br>
            </div>
          </div>  
          <% end %>
          <% @customers.each do |cust| %>
            <% next if pay_bill_config.customers.include?(cust) %>
            <div class="relative flex items-start mt-1">
              <div class="flex h-5 items-center">
                <%= check_box_tag 'pay_bill_config[customer_ids][]', cust.id, false, class:"h-4 w-4 rounded border-gray-300 text-tokanisecondary-600 focus:ring-tokanisecondary-500" %>
              </div>
              <div class="ml-3 text-sm">
                <%= cust.name %>
                <br>
              </div>
            </div>    
        <% end %>
        </dd>
      </div>

      <div class="sm:col-span-1">
        <dt class="text-md font-semibold text-gray-900">Interpreters</dt>
        <dd  class="mt-3 text-sm text-gray-900">
          <% @pay_bill_config.interpreters.each do |int| %>
            <div class="relative flex items-start mt-1">
              <div class="flex h-5 items-center">
                <%= check_box_tag 'pay_bill_config[interpreter_ids][]', int.id, true, class:"h-4 w-4 rounded border-gray-300 text-tokanisecondary-600 focus:ring-tokanisecondary-500" %>
              </div>
              <div class="ml-3 text-sm">
                <%= int.last_name %>, <%= int.first_name %>
                <br>
              </div>
            </div>
            <% end %>
            <% @interpreters.each do |int| %>
              <% next if @pay_bill_config.interpreters.include?(int) %>
              <div class="relative flex items-start mt-1">
                <div class="flex h-5 items-center">
                  <%= check_box_tag 'pay_bill_config[interpreter_ids][]', int.id, false, class:"h-4 w-4 rounded border-gray-300 text-tokanisecondary-600 focus:ring-tokanisecondary-500" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= int.last_name %>, <%= int.first_name %>
                  <br>
                </div>
              </div>
          <% end %>
        </dd>
      </div>
    </dl>
  </div>
  <%= form.hidden_field :is_active %>

    <div class="flex justify-center">
        <%= form.button 'Apply Configurations', type: 'submit', class: "bg-tokanisecondary-600 hover:bg-tokanisecondary-700 text-white font-bold py-2 px-4 rounded-full" %>
    </div>

    
  <% end %>
  </div>
</div>


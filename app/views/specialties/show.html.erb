<%= content_for :title, "Specialties ##{@specialty.id}" %>
<%= turbo_stream_from @specialty %>

<div class="container px-4 mx-auto my-8">
  <div class="flex items-center justify-between mb-4">
    <h1 class="h3">
      <%= link_to "Specialties", specialties_path, class: "text-black" %>
      <span class="text-gray-400 font-light mx-2">\</span>
      Specialty #<%= @specialty.id %>
    </h1>
    <%= link_to t("edit"), edit_specialty_path(@specialty), class: "btn btn-white" %>
  </div>

  <div class="p-8 bg-white rounded shadow">
    <%= render @specialty %>
  </div>
</div>

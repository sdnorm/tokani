<%= render partial: 'shared/sidenav' %>

<%= render(partial: "shared/invite_user") %>

<div>
  <div class="flex flex-1 flex-col md:pl-64">
    <main class="flex-1">
      <div class="py-6">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 md:px-6">
          <div class="px-4 sm:px-6 lg:px-8">
            <div class="sm:flex sm:items-center">
              <div class="sm:flex-auto">
                <h1 class="text-xl font-semibold text-gray-900">Requestors</h1>
                <p class="mt-2 text-sm text-gray-700">A list of all the requestors in your account.</p>
              </div>
              <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
                <%= link_to "Add Requestor", new_requestor_path, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-tokanisecondary-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-tokanisecondary-700 focus:outline-none focus:ring-2 focus:ring-tokanisecondary-500 focus:ring-offset-2 sm:w-auto" %>
              </div>
              <!-- <div class="mt-4 sm:mt-0 sm:ml-16 sm:flex-none">
                <button type="button" class="inline-flex items-center justify-center rounded-md border border-transparent bg-tokanisecondary-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-tokanisecondary-700 focus:outline-none focus:ring-2 focus:ring-tokanisecondary-500 focus:ring-offset-2 sm:w-auto">Add Requestor</button>
              </div> -->
            </div>
            <div class="-mx-4 mt-8 overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:-mx-6 md:mx-0 md:rounded-lg">
              <table class="min-w-full divide-y divide-gray-300">
                <thead class="bg-gray-50">
                  <tr>
                    <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm uppercase font-semibold text-gray-900 sm:pl-6">Name</th>
                    <th scope="col" class="hidden px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900 lg:table-cell">Email</th>
                    <th scope="col" class="hidden px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900 lg:table-cell">Customer</th>
                    <th scope="col" class="hidden px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900 lg:table-cell">Site</th>
                    <th scope="col" class="hidden px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900 sm:table-cell">Role</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900">Phone</th>
                    <th scope="col" class="px-3 py-3.5 text-left text-sm uppercase font-semibold text-gray-900">Edit</th>  
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white">
                <% @requestors.each do |requestor| %>
                  <tr>
                    <td class="w-full max-w-0 py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:w-auto sm:max-w-none sm:pl-6">
                      <%= link_to "#{requestor.last_name}, #{requestor.first_name}", requestor_path(requestor) %> 
                        
                      <dl class="font-normal lg:hidden">
                        <dt class="sr-only">Email</dt>
                        <dd class="mt-1 truncate text-gray-700"><%= requestor.email %></dd>
                        <dt class="sr-only">Customer</dt>
                        <dd class="mt-1 truncate text-gray-700"><%= get_customer(requestor.requestor_detail) %></dd>
                        <dt class="sr-only">Site</dt>
                        <dd class="mt-1 truncate text-gray-500">Need to Add Sites</dd>
                      </dl>
                    </td>
                    <td class="hidden px-3 py-4 text-sm text-gray-500 lg:table-cell"><%= requestor.email %></td>
                    <td class="hidden px-3 py-4 text-sm text-gray-500 lg:table-cell"><%= get_customer(requestor.requestor_detail) %></td>
                    <td class="hidden px-3 py-4 text-sm text-gray-500 lg:table-cell"><%= get_site(requestor.requestor_detail) %></td>
                    <td class="hidden px-3 py-4 text-sm text-gray-500 sm:table-cell"><%= requestor.requestor_detail.requestor_type.titleize %></td>
                    <td class="hidden px-3 py-4 text-sm text-gray-500 sm:table-cell"><%= requestor.requestor_detail.primary_phone %></td>
                    <td class="hidden px-3 py-4 text-sm text-gray-500 sm:table-cell">
                      <a href="<%= edit_requestor_path(requestor) %>" class="text-tokanisecondary-600 hover:text-tokanisecondary-900">Edit<span class="sr-only">, <%= requestor.id %></span></a>
                    </td>
                  </tr>
                <% end %>
                  <!-- More people... -->
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
